
<% if @submission.errors.any? %>

<h2>The following errors prevented the submission from getting created</h2>

<ul>

<% @submission.errors.full_messages.each do |msg| %>

<li><%= msg %></li>

<% end %>

</ul>

<% end %>


<%= form_for @submission do |f| %>

<p>

<%= f.label :code %><br/>
<%= f.text_area :code %>
</p>

<p>

<div class="form-group">

<div class="control-label col-sm-2">

<%= f.label :input %>

</div>


<%= f.text_area :input, class: "form-control", placeholder: "Input here", autofocus: true %>


</div>

<%= f.submit %>

</p>

<% end %>
 <script>
   var editor = CodeMirror.fromTextArea(document.getElementById('submission_code'),{
     mode: "ruby",
     lineNumbers: true
   });

 </script>
